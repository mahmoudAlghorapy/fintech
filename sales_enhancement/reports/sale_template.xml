                        user_idstable.custom-border {
                        border: 1px solid black;
                        border-collapse: collapse;
                        }
                        th.custom , td.custom {
                        border: 1px solid black;
                        padding: 5px;
                        vertical-align: middle;
                        text-align: center;
                        }
                        .r {
                        text-align: right;
                        }
                        .l {
                        text-align: left;
                        }
                        .multiline {
                        white-space: pre-wrap;
